@model IEnumerable<MvcMusicStore.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @ViewBag.AlbumCount Albums

    @if (ViewBag.SearchTerm != null)
    {
        <small> - contain the term(s) "@ViewBag.SearchTerm"</small>
    }
</h2>



<section class="col-md-3">
    @Html.ActionLink("Create New", "Create")
</section>
<section class="col-md-9 text-right">
    @using (Html.BeginForm())
    {
        //this method is used to prevent cross site scripting
        @Html.AntiForgeryToken()
        <input name="Title" id="Title" placeholder="Enter Album Title" required />
        <button class="btn btn-default">Search</button>
    }
</section>

<table class="table table-striped table-hover sortable">
    <tr>
        <th>
            Artist
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Genre
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
